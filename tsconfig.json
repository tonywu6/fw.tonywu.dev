{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["@remix-run/cloudflare", "vite/client"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server.ts",
    "**/.server.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client.ts",
    "**/.client.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "eslint.config.js",
    "lingui.config.js",
    "app/css/fetch.js",
    "util"
  ]
}
